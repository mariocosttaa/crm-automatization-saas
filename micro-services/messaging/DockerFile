# Use official PHP 8.4 FPM image
FROM php:8.4-fpm

# Install system dependencies
RUN apt-get update && DEBIAN_FRONTEND=noninteractive apt-get install -y     git     unzip     libpq-dev     libzip-dev     libicu-dev     librabbitmq-dev     && docker-php-ext-install pdo pdo_pgsql zip intl     && pecl install amqp     && docker-php-ext-enable amqp

# Install Composer
COPY --from=composer:2 /usr/bin/composer /usr/bin/composer

# Set working directory
WORKDIR /var/www

# Copy application files
COPY . .

# Install PHP dependencies
RUN composer install --no-dev --optimize-autoloader

# Expose port 8000 (Symfony default for dev)
EXPOSE 8000

# Run Symfony built-in server (for dev)
CMD ["php", "-S", "0.0.0.0:8000", "-t", "public"]
